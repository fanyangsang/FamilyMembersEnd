<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_two"
    android:orientation="vertical">
    <include layout="@layout/item_address_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="16sp"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@null"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="16sp"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="11"
            android:textColorHint="@color/gray3"
            android:textColor="@color/black"
            android:background="@null"
            android:hint=" 请输入您的电话"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_map"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_marginLeft="16sp"
            android:layout_height="wrap_content"
            android:text="服务地址"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:hint="请选择服务地址"
            android:textSize="14sp"
            android:textColorHint="@color/gray3"
            android:textColor="@color/black"
            android:background="@null"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@mipmap/personal_my_address_location"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="16sp"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_address_details"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@null"
            android:textColorHint="@color/gray3"
            android:hint="楼栋、单元、门牌"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <CheckBox
            android:id="@+id/cb_rb"

            android:layout_marginLeft="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:textColor="@color/word_hui"
            android:button="@drawable/personal_my_address_defaulte_checked"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_confirm_modify"
        android:layout_width="match_parent"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="40dp"
        android:layout_height="36dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/login_button_box"
        android:text="确认修改"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</LinearLayout>