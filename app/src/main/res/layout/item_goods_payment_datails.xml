<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="商品订单"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="left" />
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="待付款"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="right" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_two"/>
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/goods_order_img_frame"
            android:src="@mipmap/goods_order_item_img"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_goods_name"
            android:layout_toRightOf="@id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_toRightOf="@id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:text="2018-10-01"
            android:textSize="14sp"
            android:textColor="@color/word_hui"
            android:gravity="right"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_goods_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_img"
            android:layout_below="@id/tv_goods_name"
            android:text="我是本好书"
            android:textSize="12sp"
            android:textColor="@color/word_hui"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignBaseline="@id/iv_img"
            android:layout_toRightOf="@id/iv_img"
            android:layout_below="@id/tv_goods_summary"
            android:text="￥199"
            android:textSize="14sp"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_money"
            android:layout_below="@id/tv_goods_summary"
            android:layout_alignParentRight="true"
            android:text="x1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="right"/>
        <TextView
            android:id="@+id/tv_real_payment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_goods_number"
            android:layout_alignParentRight="true"
            android:text="￥199"
            android:textSize="16sp"
            android:textColor="@color/red"/>
    </RelativeLayout>
</LinearLayout>